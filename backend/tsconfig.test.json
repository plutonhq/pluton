{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"types": ["node", "jest"],
		"baseUrl": ".",
		"paths": {
			"pluton-core-backend/notifications/channels/NotificationChannelResolver": [
				"./src/notifications/channels/NotificationChannelResolver.ts"
			]
		},
		"esModuleInterop": true,
		"allowImportingTsExtensions": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noErrorTruncation": true
	},
	"include": ["__tests__/**/*", "src/**/*"]
}
