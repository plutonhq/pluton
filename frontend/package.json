{
   "name": "@plutonhq/core-frontend",
   "description": "Pluton Core Frontend Library",
   "version": "0.1.9",
   "author": "Plutonhq",
   "license": "Apache-2.0",
   "publishConfig": {
      "access": "public"
   },
   "files": [
      "dist-lib",
      "src",
      "README.md",
      "LICENSE"
   ],
   "sideEffects": [
      "**/*.css",
      "**/*.scss"
   ],
   "dependencies": {
      "@tanstack/react-query-devtools": "^5.90.2",
      "comlink": "^4.4.2",
      "dexie": "^4.2.1",
      "marked": "^16.2.1",
      "nanoid": "^5.0.9",
      "react-toastify": "^11.0.5",
      "react-tooltip": "^5.29.1",
      "react-window": "^1.8.11"
   },
   "peerDependencies": {
      "@tanstack/react-query": "^5.85.5",
      "react": "^18.3.1",
      "react-dom": "^18.3.1",
      "react-router": "^7.9.5"
   },
   "devDependencies": {
      "@eslint/js": "^9.15.0",
      "@tanstack/eslint-plugin-query": "^5.62.1",
      "@types/node": "^22.10.2",
      "@types/react": "^18.3.12",
      "@types/react-dom": "^18.3.1",
      "@types/react-window": "^1.8.8",
      "@vitejs/plugin-react": "^4.3.4",
      "concurrently": "^9.2.1",
      "cross-env": "^10.0.0",
      "eslint": "^9.15.0",
      "eslint-config-prettier": "10.1.5",
      "eslint-plugin-import": "^2.31.0",
      "eslint-plugin-react-hooks": "^5.0.0",
      "eslint-plugin-react-refresh": "^0.4.14",
      "globals": "^15.12.0",
      "postcss": "^8.4.49",
      "prettier": "^3.4.2",
      "sass-embedded": "^1.82.0",
      "typescript": "^5.7.2",
      "typescript-eslint": "^8.15.0",
      "typescript-plugin-css-modules": "^5.1.0",
      "vite": "^6.0.3",
      "vite-plugin-comlink": "^5.3.0",
      "vite-plugin-pwa": "^1.1.0",
      "workbox-window": "^7.3.0"
   },
   "exports": {
      ".": {
         "types": "./dist-lib/index.d.ts",
         "import": "./dist-lib/index.js",
         "default": "./dist-lib/index.js"
      },
      "./components": {
         "types": "./dist-lib/components/index.d.ts",
         "import": "./dist-lib/components.js"
      },
      "./components/*": {
         "types": "./dist-lib/components/*/index.d.ts",
         "import": "./dist-lib/components/*/index.js"
      },
      "./routes": {
         "types": "./dist-lib/routes/index.d.ts",
         "import": "./dist-lib/routes.js"
      },
      "./routes/*": {
         "types": "./dist-lib/routes/*/*.d.ts",
         "import": "./dist-lib/routes/*/*.js"
      },
      "./routes/*/*.module.scss": {
         "import": "./dist-lib/routes/*/*.module.scss.js",
         "default": "./dist-lib/routes/*/*.module.scss.js"
      },
      "./components/*/*.module.scss": {
         "import": "./dist-lib/components/*/*.module.scss.js",
         "default": "./dist-lib/components/*/*.module.scss.js"
      },
      "./components/*/*/*.module.scss": {
         "import": "./dist-lib/components/*/*/*.module.scss.js",
         "default": "./dist-lib/components/*/*/*.module.scss.js"
      },
      "./routes/*/*": "./dist-lib/routes/*/*",
      "./components/*/*": "./dist-lib/components/*/*",
      "./services": {
         "types": "./dist-lib/services/index.d.ts",
         "import": "./dist-lib/services.js"
      },
      "./hooks": {
         "types": "./dist-lib/hooks/index.d.ts",
         "import": "./dist-lib/hooks.js"
      },
      "./utils": {
         "types": "./dist-lib/utils/index.d.ts",
         "import": "./dist-lib/utils.js"
      },
      "./context": {
         "types": "./dist-lib/context/index.d.ts",
         "import": "./dist-lib/context.js"
      },
      "./types": {
         "types": "./dist-lib/@types/index.d.ts",
         "import": "./dist-lib/@types/index.js"
      },
      "./@types/*": {
         "types": "./dist-lib/@types/*.d.ts"
      },
      "./config/*": {
         "types": "./dist-lib/config/*.d.ts",
         "import": "./dist-lib/config/*.js"
      },
      "./styles/*.scss": "./dist-lib/styles/*.scss",
      "./styles/*.css": "./dist-lib/styles/*.css",
      "./styles/core-frontend.css": "./dist-lib/styles/core-frontend.css",
      "./router": {
         "types": "./dist-lib/router.d.ts",
         "import": "./dist-lib/router.js"
      },
      "./*": "./dist-lib/*",
      "./package.json": "./package.json"
   },
   "main": "./dist-lib/index.js",
   "module": "./dist-lib/index.js",
   "types": "./dist-lib/index.d.ts",
   "scripts": {
      "build": "tsc -b && vite build",
      "build:lib": "vite build --config vite.config.lib.ts && tsc -p tsconfig.lib.json",
      "build:lib:fast": "tsc -p tsconfig.lib.json",
      "build:lib:watch": "tsc -p tsconfig.lib.json --watch --preserveWatchOutput",
      "build:pkg": "npm run build:lib",
      "dev": "concurrently -n \"vite,tsc\" -c \"blue,green\" \"cross-env NODE_ENV=development vite\" \"npm run build:lib:watch\"",
      "lint": "eslint .",
      "preview": "vite preview",
      "prepublishOnly": "npm run build:lib"
   },
   "type": "module"
}
