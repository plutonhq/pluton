{
   "name": "pluton",
   "version": "0.0.1",
   "description": "Pluton - Open Source Backup Software",
   "license": "Apache-2.0",
   "scripts": {
      "build": "turbo run build",
      "build:executables": "node ./scripts/build-executables.js",
      "dev:backend": "pnpm --filter @plutonhq/core-backend dev",
      "dev:frontend": "pnpm --filter @plutonhq/core-frontend dev",
      "dev": "concurrently \"pnpm dev:backend\" \"pnpm dev:frontend\" "
   },
   "devDependencies": {
      "@yao-pkg/pkg": "^6.10.1",
      "adm-zip": "^0.5.16",
      "concurrently": "^9.1.2",
      "prettier": "^3.0.0",
      "release-please": "^17.1.3",
      "syncpack": "^13.0.4",
      "turbo": "^2.6.0",
      "typescript": "^5.0.0"
   },
   "pkg": {
      "assets": [
         "backend/public/**/*",
         "backend/drizzle/**/*"
      ],
      "targets": [
         "node24-win-x64",
         "node24-linux-x64",
         "node24-linux-arm64",
         "node24-macos-x64",
         "node24-macos-arm64"
      ],
      "outputPath": "dist/executables"
   },
   "packageManager": "pnpm@10.20.0",
   "workspaces": [
      "backend",
      "frontend"
   ]
}