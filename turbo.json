{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "@plutonhq/core-frontend#build"
      ],
      "outputs": [
        "dist/**",
        "public/**"
      ]
    },

    "build:pkg": {
      "outputs": [
        "dist/**"
      ]
    },

    "@plutonhq/core-frontend#build": {
      "outputs": [
        "dist/**"
      ]
    },

    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": [
        "build:pkg"
      ]
    },
    "lint": {}
  }
}